.mw-500.mx-auto
  %h2.text-center.text-sm-start= t('.change_your_password')
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, builder: BootstrapBuilder) do |f|
    = render "devise/shared/error_messages", resource: resource
    = f.hidden_field :reset_password_token
    .field
      = f.label :password, t('.new_password')
      - if @minimum_password_length
        %em= t('devise.shared.minimum_password_length', count: @minimum_password_length)

      = f.password_field :password, autofocus: true, autocomplete: "new-password"
    .field
      = f.label :password_confirmation, t('.confirm_new_password')
      = f.password_field :password_confirmation, autocomplete: "new-password"
    .actions.text-center.text-sm-start
      = f.submit t('.change_my_password')
  = render "devise/shared/links"
